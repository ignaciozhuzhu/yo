//--------------------------------公共函数-------------------------------------------------
var appendData = function() {
	$.ajax({
		url: serviceurl + "doctor/query", //请求的Url
		type: "get", //提交方式
		dataType: "json", //请求的返回类型 这里为json	
		data: {
			"keyword": Keyword,
			"orderid": Orderid,
			"countycode": Countycode,
			"gradelevel": Gradelevel,
			"diseaseid": Diseaseid,
			"currentPage": CurrentPage,
			"pointX": PointX,
			"pointY": PointY
		},
		contentType: "application/json", //内容类型
		cache: false,
		async: false, //是否异步提交
		beforeSend: function(XMLHttpRequest) {
			$("#loading-toast").css("display", "block");
		},
		success: function(dt) {
			$("#loading-toast").css("display", "none");
			if (dt.status == "success") {
				dt.data.forEach(function(e) {
					reldata.push(e);
				});
				dataSize = dt.data.length;
				// reminder("success: " + JSON.stringify(dt));
			}
		},
		error: function(XMLHttpRequest, textStatus, errorThrown) {
			$("#loading-toast").css("display", "none");
			$("#fail-toast").css("display", "block");
			$("#fail-toast-text").text("医生信息查询失败!");
			setTimeout(function() {
				$("#fail-toast").css("display", "none");
			}, 2000);
			return;
		}
	});
};
var refleshData = function() {
	$.ajax({
		url: serviceurl + "doctor/query", //请求的Url
		type: "get", //提交方式
		dataType: "json", //请求的返回类型 这里为json	
		data: {
			"keyword": Keyword,
			"orderid": Orderid,
			"countycode": Countycode,
			"gradelevel": Gradelevel,
			"diseaseid": Diseaseid,
			"currentPage": CurrentPage,
			"pointX": PointX,
			"pointY": PointY
		},
		contentType: "application/json", //内容类型
		cache: false,
		async: false, //是否异步提交
		beforeSend: function(XMLHttpRequest) {
			$("#loading-toast").css("display", "block");
		},
		success: function(dt) {
			$("#loading-toast").css("display", "none");
			if (dt.data.length == 0) {
				reldata = [];
			} else {
				reldata = dt.data;
				dataSize = dt.data.length;
			}
		},
		error: function(XMLHttpRequest, textStatus, errorThrown) {
			$("#loading-toast").css("display", "none");
			$("#fail-toast").css("display", "block");
			$("#fail-toast-text").text("医生信息查询失败!");
			setTimeout(function() {
				$("#fail-toast").css("display", "none");
			}, 2000);
			return;
		}
	});
};
//------------------------------公共函数 end-----------------------------------------------

