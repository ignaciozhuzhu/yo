var docData = [];
var placeData = [];
var attentive = "关注";
var hospitalName = "";
var goDoctorDet = function(clinictype, price, workdate, timeFlag, hospitalName, workdayid, noon) {
	workdate = getMobilTime(workdate).split("日")[0] + "日";
	var timedate = workdate.split(" ")[0];
	var role = "";
	if (clinictype == 1) {
		role = "专家预约";
	} else if (clinictype == 0) {
		role = "普通预约";
	}
	if (role != "") {
		delCookie("price");
		setCookie("price", price == "" ? "免费" : price);
		delCookie("role");
		setCookie("role", role);

		delCookie("timedate");
		setCookie("timedate", timedate);
		delCookie("timeFlag");
		setCookie("timeFlag", timeFlag);

		delCookie("hospitalName");
		setCookie("hospitalName", hospitalName);
		delCookie("workdayID");
		setCookie("workdayID", workdayid);

		delCookie("noon");
		setCookie("noon", noon);
		delCookie("gobackURL");
		setCookie("gobackURL", ipurl + "/reservation/reservation_resdet.html", 30);
		location.href = "reservation_datedet.html";
	}
};
var getDoctorID = function() {
	var urlinfo = window.location.href; //获取当前页面的url 
	//var len = urlinfo.length; //获取url的长度 
	var offset = urlinfo.indexOf("?"); //设置参数字符串开始的位置 
	var val = "";
	if (offset > 0) {
		val = getURLparam("doctorid");
		setCookie("hospitalID", "", 30);
	} else {
		val = getCookie("doctorID");
	}
	return val;
};

var Reservation_topBox = React.createClass({
	getInitialState: function() {
		var doctorid = getDoctorID();
		$.ajax({
			url: serviceurl + "doctor/detail", //请求的Url
			type: "get", //提交方式
			dataType: "json", //请求的返回类型 这里为json	
			async: false,
			data: {
				"doctorid": doctorid
			},
			contentType: "application/json", //内容类型
			cache: false, //是否异步提交
			success: function(dt) {
				if (dt.status == "success") {
					docData = dt.data;
					//获取医院名称
					$.ajax({	  
						url :  serviceurl+"hospital/detail", 
						type : "get",                                           
						dataType : "json",                                       
						data : {"hospitalid" : getURLparam("hospitalID")},
						contentType : "application/json",        			    
						cache : false,  
						async: false,                                       
						beforeSend:function(XMLHttpRequest){},                                        
						success : function(dt){
							console.log(JSON.stringify(dt));
							if(dt.status == "success"){
								hospitalName = checknull(dt.data)==""?docData.defaulthosname:dt.data.name;
							}else{
								hospitalName = docData.defaulthosname;
							}
						},
						complete:function(XMLHttpRequest,textStatus){},  
						error:function(XMLHttpRequest, textStatus, errorThrown){}
					});
					if (docData.hasAttention == "N") {
						attentive = "关注";
					} else {
						attentive = "已关注";
					}
					delCookie("doctorName");
					setCookie("doctorName", docData.fullname);
					delCookie("doctorTitle");
					setCookie("doctorTitle", docData.title);
				} else if (dt.status == "fail") {
					reminder("查询失败");
					return;
				} else {
					reminder("查询错误");
					return;
				}
			},
			error: function(XMLHttpRequest, textStatus, errorThrown) {
				if (XMLHttpRequest.status == 404) {
					location.href = "../404.html";
				}
				reminder("地区列表查询失败！");
				return;
			}
		});
		return {
			data: docData
		};
	},
	render: function() {
		return (
			<div>
        		<Reservation_docList data={this.state.data} getDoctorID={getDoctorID()} attentive={attentive} hospitalName={hospitalName} />
      		</div>
		);
	}
});

ReactDOM.render(
	<Reservation_topBox data={docData} />,
	document.getElementById('topContent')
);

