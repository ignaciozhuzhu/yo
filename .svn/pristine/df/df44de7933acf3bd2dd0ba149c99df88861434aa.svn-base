var Reservation_centerHidden = React.createClass({
	componentDidMount: function() {
		var _params={
	      "hospitalid" : getURLparam("hospitalID"),
	      "doctorid" : getURLparam("doctorid")
	    };
	    $.ajax({	  
	      url :  serviceurl+"doctor/listBookinginfo", 
	      type : "get",                                           
	      dataType : "json",                                       
	      data : _params,
	      contentType : "application/json",        			    
	      cache : false,  
	      async: false,                                       
	      beforeSend:function(XMLHttpRequest){},                                        
	      success : function(dt){
	        console.log(JSON.stringify(dt));
	        if(dt.status == "success"){
	        	console.log(JSON.stringify(dt));
	        var rulesList = dt.data;
	          $.each(rulesList,function(idx,item){
                  $("#res_rules_text").text(item.booking_info);
              });	          
	        }else{
	        	reminder("预约规则查询失败");
	        	return;
	        }
	      },
	      complete:function(XMLHttpRequest,textStatus){},  
	      error:function(XMLHttpRequest, textStatus, errorThrown){
	      	reminder(XMLHttpRequest.responseJSON.message);
	      	return;
	      }
	    });
	},
	goDetail: function() {
		setCookie("doctorID", getDoctorID());
		delCookie("gobackURL");
		setCookie("gobackURL", "reservation_resdet.html");
		location.href = "reservation_rules.html";
	},
	render: function() {
		return (
			<div className="res_rules_box">
		        <div className="weui_panel weui_panel_access res_rules_panel">
		            <div className="weui_panel_bd">
		                <div className="weui_media_text res_rules_media_text">
		                    <div className="weui_media_title res_rules_media_title" id="res_rules_text"></div>
		                    <div className="res_rules_tit">预约须知</div>
		                </div>
		            </div>
		        </div>
		    </div>
		);
	}
});
