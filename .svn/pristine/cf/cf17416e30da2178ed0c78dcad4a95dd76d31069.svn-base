//跳转到下一页面
var goNext = function(id, name) {
	//设置参数到cookie内
	delCookie("cityID");
	setCookie("cityID", id, 30);
	delCookie("cityName");
	setCookie("cityName", name, 30);
	//location.href = htmlUrl;
	location.reload()
};
//获取前一页页面的url链接
var getHtmlUrl = function() {
	htmlUrl = protocol + getCookie("gobackURL");
};
getHtmlUrl();
var CitySelectBox = React.createClass({
	getInitialState: function() {
		return {
			count: 0,
			mockdata: null
		}
	},
	componentDidMount: function() {
		this.serverRequest = $.get(serviceurl + "site/listOpenCity").done(function(data) {
			this.setState({
				mockdata: data.data
			});
		}.bind(this));
	},
	componentWillUnmount: function() {
		this.serverRequest.abort();
	},
	handleClick(id, name) {
		name = name.replace("市", "");
		name = name.replace("敬请期待", "请选择");
		goNext(id, name);
	},
	render: function() {
		var that = this;
		if (this.state.mockdata) {
			var nodes = this.state.mockdata.map(function(comment) {
				that.state.count++;
				var imgsrc = serviceurl + comment.avatar;
				return (
					<div key={comment.id} className="inlineb">
		            <div className="circle-text">
		              <img className="circle" src= {imgsrc} onClick={that.handleClick.bind(that,comment.countycode,comment.name)} />
		              <div className="text">{comment.name}</div>
		            </div>
         		</div>
				);
			});
			return (
				<div className="city-select-box">
		          <div className="boxpadding">
		          {nodes}
		          </div>
	      		</div>
			);
		}
		return <div>正在加载...</div>;
	}
});
export {
	CitySelectBox
};